# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=contentflow_ai

# JWT Secret
JWT_SECRET=your-jwt-secret-key-here

# Session Secret
SESSION_SECRET=your-session-secret-key-here

# Server Configuration
PORT=3000

# Stripe Configuration (Chaves de Teste)
# Para usar em produção, substitua por suas chaves reais do Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Mercado Pago Configuration (Opcional - para pagamentos no Brasil)
# Obtenha suas chaves em: https://www.mercadopago.com.br/developers
MERCADO_PAGO_PUBLIC_KEY=APP_USR_YOUR_PUBLIC_KEY_HERE
MERCADO_PAGO_ACCESS_TOKEN=APP_USR_YOUR_ACCESS_TOKEN_HERE

# Social Media API Keys (para implementação futura)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
