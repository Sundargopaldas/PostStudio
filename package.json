{
  "name": "poststudio-ia",
  "version": "2.0.0",
  "description": "PostStudio I.A - Plataforma de criação de conteúdo com inteligência artificial",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:css",
    "build:css": "tailwindcss -i ./src/input.css -o ./public/css/style.css --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "docker:build": "docker build -t contentflow-ai .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js"
  },
  "keywords": [
    "ai",
    "content",
    "social-media",
    "automation",
    "saas",
    "enterprise",
    "marketing",
    "analytics"
  ],
  "author": "PostStudio I.A Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.9.1",
    "axios": "^1.6.0",
    "bcryptjs": "^3.0.2",
    "bull": "^4.12.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "mysql2": "^3.15.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "openai": "^4.20.1",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "stripe": "^14.7.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "twitter-api-v2": "^1.15.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@sentry/node": "^7.77.0",
    "autoprefixer": "^10.4.15",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.29",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/poststudio-ia/poststudio-ia.git"
  },
  "bugs": {
    "url": "https://github.com/poststudio-ia/poststudio-ia/issues"
  },
  "homepage": "https://poststudio.ia"
}
